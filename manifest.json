{
  "manifest_version": 3,
  "name": "Email Reply Helper",
  "version": "1.0",
  "description": "Get help with email replies from colleagues",
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 