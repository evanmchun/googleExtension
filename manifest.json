{
  "manifest_version": 3,
  "name": "Email Reply Helper",
  "version": "1.0.1",
  "description": "Get help with email replies from colleagues",
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "notifications",
    "tabs"
  ],
  "oauth2": {
    "client_id": "${CHROME_CLIENT_ID}",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Email Reply Helper"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
} 