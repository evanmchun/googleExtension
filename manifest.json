{
  "manifest_version": 3,
  "name": "Email Reply Helper",
  "version": "1.0",
  "description": "Get help with email replies from your team",
  "permissions": [
    "storage",
    "identity",
    "identity.email",
    "notifications",
    "cookies",
    "windows"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "http://localhost:3001/*"
  ],
  "oauth2": {
    "client_id": "${CHROME_CLIENT_ID}",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 